<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".FourthFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textFourthFragment"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/green_normal"
        android:textSize="40sp"
        android:text="Cuarto Fragmento" />

    <TextView
        android:id="@+id/viewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFourthFragment"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Name" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewName"
        android:layout_marginTop="8dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/viewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Email" />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewEmail"
        android:layout_marginTop="8dp"
        android:textSize="20sp" />


</LinearLayout>