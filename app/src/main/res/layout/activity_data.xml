    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataActivity">

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.lab07.ThirdFragment"
        android:layout_width="match_parent"
